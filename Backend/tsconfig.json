{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",  // ← Changed from ESNext to commonjs for Node.js
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    // "emitDeclarationOnly": true,  ← Removed this line
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // "allowImportingTsExtensions": true,  ← Remove this for production builds
    "lib": ["ES2020", "ESNext.AsyncIterable"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}